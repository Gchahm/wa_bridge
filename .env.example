# Database (Supabase)
DATABASE_URL=postgresql://postgres:postgres@supabase_db_n8n:5432/postgres

# Optional: webhook URLs for forwarding messages to external services
MESSAGE_WEBHOOK_URL=http://n8n:5678/webhook/whatsapp
VOICE_WEBHOOK_URL=http://n8n:5678/webhook/whatsapp-audio

# Optional: Supabase Storage for media files (images, videos, audio, documents)
# Both must be set to enable media storage. Without these, the bridge still works but skips media download.
SUPABASE_URL=https://supabase_kong_n8n:8000
SUPABASE_SERVICE_KEY=your-service-role-key

# n8n â€” values derived from DATABASE_URL but using the n8n_app role and n8n schema
N8N_DB_HOST=supabase_db_n8n
N8N_DB_PORT=5432
N8N_DB_NAME=postgres
N8N_DB_USER=postgres
N8N_DB_PASSWORD=postgres
N8N_DB_SSL_ENABLED=false

N8N_ENCRYPTION_KEY=your-n8n-encryption-key
N8N_PORT=5678
# N8N_WEBHOOK_URL=http://localhost:5678/
